<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="@drawable/ride_overlay_background"
    android:padding="20dp">

    <!-- Ride type indicator -->
    <LinearLayout
        android:id="@+id/ride_type_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_bg_light"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_auto"
            android:tint="#475467" />

        <TextView
            android:id="@+id/ride_type_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Auto"
            android:textColor="#344054"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Fare display -->
    <LinearLayout
        android:id="@+id/fare_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ride_type_container"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/fare_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₹55"
            android:textColor="#101828"
            android:textSize="48sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:text="+"
            android:textColor="#98A2B3"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/incentive_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₹6"
            android:textColor="#2ECC71"
            android:textSize="48sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />
    </LinearLayout>

    <!-- Location section with connecting line -->
    <RelativeLayout
        android:id="@+id/location_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fare_container"
        android:layout_marginTop="20dp">

        <!-- Vertical connecting line -->
        <View
            android:id="@+id/connecting_line"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp"
            android:background="#D0D5DD" />

        <!-- Pickup location -->
        <LinearLayout
            android:id="@+id/pickup_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <View
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/pickup_dot" />

                <TextView
                    android:id="@+id/pickup_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="0.4 Km"
                    android:textColor="#101828"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/pickup_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="4dp"
                android:text="Hitech City - 3/27, Sri Sai Nagar, Madhapur, 500081"
                android:textColor="#475467"
                android:textSize="14sp"
                android:maxLines="2"
                android:ellipsize="end" />
        </LinearLayout>

        <!-- Drop location -->
        <LinearLayout
            android:id="@+id/drop_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pickup_container"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <View
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/drop_dot" />

                <TextView
                    android:id="@+id/drop_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="2 Km"
                    android:textColor="#101828"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/drop_location_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="4dp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:text="Doctors Colony Madhapur"
                android:textColor="#101828"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/highlighted_text_bg" />

            <TextView
                android:id="@+id/drop_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="2dp"
                android:text="- BLANK TELANGANA BAR AND KITCHEN, Kavuri Hills Road, near D.Mart, opp. HDFC Bank, CBI Colony, J..."
                android:textColor="#475467"
                android:textSize="13sp"
                android:maxLines="2"
                android:ellipsize="end" />
        </LinearLayout>
    </RelativeLayout>

    <!-- Action buttons -->
    <LinearLayout
        android:id="@+id/action_buttons_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/location_container"
        android:orientation="horizontal"
        android:layout_marginTop="24dp">

        <!-- Timer and Reject button container -->
        <LinearLayout
            android:id="@+id/reject_button"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_weight="0.35"
            android:layout_marginEnd="12dp"
            android:orientation="horizontal"
            android:background="@drawable/reject_button_bg"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center">

            <!-- Timer icon with circular progress -->
            <FrameLayout
                android:layout_width="28dp"
                android:layout_height="28dp">

                <ProgressBar
                    android:id="@+id/timer_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:progress="75"
                    android:max="100"
                    android:progressDrawable="@drawable/circular_progress_timer"
                    android:rotation="-90" />

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_timer"
                    android:tint="#DC3545" />
            </FrameLayout>
        </LinearLayout>

        <Button
            android:id="@+id/accept_button"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_weight="0.65"
            android:text="Accept"
            android:textColor="#101828"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/accept_button_bg"
            android:clickable="true"
            android:focusable="true"
            android:elevation="2dp" />
    </LinearLayout>

</RelativeLayout>
